generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  
}

enum Status {
  IN_PROGRESS
  PROCESSING
  APPROVED
  REJECTED
}


model JobApplication {
  id        String   @id @default(uuid())
  userId    String
  jobTitle  String
  company   String
  position  String
  status    Status
  link      String
  applied_at DateTime @default(now())
  updated_at DateTime @updatedAt

}